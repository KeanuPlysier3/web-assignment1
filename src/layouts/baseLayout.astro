---
import "../styles/reset.css";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle ? pageTitle + " | My Site" : "My Site"}</title>
    </head>
    <body>
        <slot />

        <!-- GSAP from CDN (safe for GitHub Pages) -->
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"
        ></script>
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"
        ></script>
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/SplitText.min.js"
        ></script>

        <!-- Your local script (needs BASE_URL) -->
        <script is:inline src="/web-assignment1/js/script.js"></script>
    </body>
</html>
