---
import "../styles/reset.css";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{pageTitle ? pageTitle + " | My Site" : "My Site"}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body>
        <slot />

        <script src={`${import.meta.env.BASE_URL}gsap.min.js`}></script>
        <script src={`${import.meta.env.BASE_URL}ScrollTrigger.min.js`}
        ></script>
        <script src={`${import.meta.env.BASE_URL}SplitText.min.js`}></script>
        <script src={`${import.meta.env.BASE_URL}script.js`}></script>
    </body>
</html>
